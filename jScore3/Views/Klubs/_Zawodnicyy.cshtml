@using jScore3.Models
@model IEnumerable<dynamic>

@if (Model.Any() == true)
{
    <div class="container">
            <h3>Lista zawodników tego klubu</h3>
            <p>Kliknij na zwijany panel aby go otworzyć i zamknąć.</p>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse1">
                           ZAWODNICY TEGO KLUBU <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    @foreach (dynamic item in Model)
                    {
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="@Url.Action("Details", "Zawodniks", new { Id= item.Id})"> @item.Imie @item.Nazwisko</a>
                            </li>
                        </ul>
                    }
                    <div class="panel-footer"></div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-12 text-center">
            Brak zawodników przypisanych do tego klubu
        </div>
    </div>
}
