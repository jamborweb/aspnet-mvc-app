@using System.Drawing
@model jScore3.Models.Stadion

@{
    ViewBag.Title = @ViewData.Model.Nazwa;
}

<div class="jumbotron myjumbotron">
    <h2>@ViewData.Model.Nazwa</h2>
</div>

<div class="row">
    <div class="col-md-7">
        <div clas="row">
            <h4>Szczegółowe informacje</h4>
            <hr/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nazwa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nazwa)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Pojemnosc)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pojemnosc)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Miasto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Miasto)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-5">
            <h4>Zdjęcie</h4>
            <hr />
        @if (File.Exists(Server.MapPath("~/Images/"+Html.DisplayFor(model => model.Zdjecie))))
        {
            <img src="~/Images/@Model.Zdjecie" alt="" class="img-responsive"/>
        }
        else
        {
            <img src="~/Images/noimage.jpg" alt="Brak zdjecia" class="img-responsive" />
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
    <p>

        @if (User.IsInRole("Admin"))
        {
            <div class="pull-left">
                @Html.ActionLink("Powrót do listy", "Index", null, null, new {@class = "btn btn-warning"})
            </div>
            <div class="pull-right">
                @Html.ActionLink("Edytuj stadion", "Edit", null, new {id = Model.Id}, new {@class = "btn btn-info"})
            </div>
        }
        else
        {
            <div class="pull-left">
                @Html.ActionLink("Powrót do listy", "Index", null, null, new {@class = "btn btn-warning"})
            </div>
        }
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@

    </p>
    </div>
</div>

